<div class="row"> 
  {{#each products }} 
    <div class="col-md-3">
      <div class="card" >
        <img src="{{imagePath}}" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <p class="card-text">{{description}}</p>
          <div class="clearfix"> 
            <div class="price">${{price}}</div>
            <div class="card text-end">
              <a href="#" class="btn btn-primary pull-right">add to cart</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
